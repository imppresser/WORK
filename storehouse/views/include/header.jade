//-header.jade
div(ng-controller="headerCtrl")
	//-login
	div(id="login",class="modal fade bs-example-modal-sm myAlert",tabindex="-1",role="dialog",aria-labelledby="mySmallModalLabel",aria-hidden="true")
			div(class="modal-dialog modal-sm")
				div(class="modal-content")
					div.modal-header
						button(type="button",class="close",data-dismiss="modal")
							span(aria-hidden="true") &times;
							span.sr-only Close
						h4.modal-title 登录
					.modal-body
						.rows
							label.alertInside 用户名：
							input#username0.alertInside(type="text")
						.rows
							label.alertInside 密码：	
							input#password0.alertInside(type="password",style="margin-left:25px")
					.modal-footer
						button.btn-primary.btn(ng-click="login()",data-dismiss="modal") 确定
	//-signup
	div(id="signup",class="modal fade bs-example-modal-sm myAlert",tabindex="-1",role="dialog",aria-labelledby="mySmallModalLabel",aria-hidden="true")
			div(class="modal-dialog modal-sm")
				div(class="modal-content")
					div.modal-header
						button(type="button",class="close",data-dismiss="modal")
							span(aria-hidden="true") &times;
							span.sr-only Close
						h4.modal-title 注册
					.modal-body
						.rows
							.form
								label.alertInside 角色:
								input#role1.alertInside(type="radio",checked="checked",name="role",value="user",style="margin-left:15px")
								label.alertInside 用户 
								input#role2.alertInside(ng-if="user&&user.role==='admin'",type="radio",name="role",value="admin")
								label.alertInside(ng-if="user&&user.role==='admin'") 管理员
						.rows
							label.alertInside 用户名:
							input#username1.alertInside(type="text")
						.rows
							label.alertInside 密码:
							input#password1.alertInside(type="password",style="margin-left:25px")
					.modal-footer
						button.btn-primary.btn(ng-click="signup()",data-dismiss="modal") 确定
	//-modifypassword
	div(id="modifypassword",class="modal fade bs-example-modal-sm myAlert",tabindex="-1",role="dialog",aria-labelledby="mySmallModalLabel",aria-hidden="true")
			div(class="modal-dialog modal-sm")
				div(class="modal-content")
					div.modal-header
						button(type="button",class="close",data-dismiss="modal")
							span(aria-hidden="true") &times;
							span.sr-only Close
						h4.modal-title 修改密码
					.modal-body
						.rows
							label.alertInside 新密码:
							input#password2.alertInside(type="password")
					.modal-footer
						button.btn-primary.btn(ng-click="modifypassword()",data-dismiss="modal") 确定


	header#top.navbar.navbar-static-top.bs-docs-nav(role=banner)
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type="button",data-toggle="collapse",data-target=".bs-navbar-collapse") 
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="../") 仓库管理系统
			nav.collapse.navbar-collapse.bs-navbar-collapse(role=navigation)
				ul.nav.navbar-nav
					li
						a(href="/") 仓库物品查询
					li(ng-if="user&&user.role==='admin'")
						a(href="/addin") 仓库物品录入
					li
						a(href="/out") 物品出库查询
				ul.nav.navbar-nav.navbar-right
					li(ng-if="!user")
						a(ng-click="loginDialog()",target="_blank") 登录
					li(ng-if="user")
						a(ng-click="",target="_blank") {{user.username}}
						ul
							li
								a(ng-click="modifypasswordDialog()") 改密
							li
								a(ng-click="logout()") 注销
					li
